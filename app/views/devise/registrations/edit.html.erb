<div class='container'>
<h4>Edit Personal details  <%= resource_name.to_s.humanize %></h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
   <div class="field">
   <b> <%= f.label :name %></b><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'input' %>
  </div>
   <div class="field">
   <b> <%= f.label :mobile %></b><br />
    <%= f.text_field :mobile, autofocus: true, autocomplete: "mobile", class: 'input' %>
  </div>
   <div class="field">
   <b><%= f.label "Gender: " %></b><br />
  <%= f.label :gender ,'Male', :value => 'Male' , autocomplete: 'Male' %>
   <%= f.radio_button :gender, 'Male' %> &nbsp;
 <%= f.label :gender ,'Female', :value => 'Female' %>
   <%= f.radio_button :gender, 'Female' ,autocomplete: 'Female' %>
  </div>

  <div class="field">
  <b><%= f.label "DOB: " %></b><br />
  <%= f.date_field :dob , autocomplete: 'dob' %>
   </div>

    <div class="field">
 <b> <%= f.label :username %></b><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'input' %>
  </div><br />

  <div class="field">
   <b> <%= f.label :email %></b><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <b><%= f.label :password %></b> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <b><%= f.label :password_confirmation %></b><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
  </div>

  <div class="field">
    <b><%= f.label :current_password %></b> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'input' %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Update" , class: 'btn btn-danger' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,  class: 'btn btn-danger' %></p>

<%= link_to "Back", :back %>
</div>